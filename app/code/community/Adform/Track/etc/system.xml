<config>
    <sections>
        <adform_track translate="label" module="adform_track">
            <label>Adform Track</label>
            <tab>service</tab>
            <frontend_type>text</frontend_type>
            <sort_order>200</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <settings translate="label">
                    <label>Adform Track Settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <active translate="label">
                            <label>Enabled</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </active>
                        <campaign_id translate="label,comment">
                            <label>Client ID</label>
                            <comment><![CDATA[Client ID is a unique client ID number generated by Adform system. Please contact <a href="mailto:magento_support@adform.com?Subject=Magento%20support">magento_support@adform.com</a> in order to get it.ï»¿]]></comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </campaign_id>                        
                        <use_customer_age_info translate="label,comment">
                            <label>Customer Age</label>
                            <comment><![CDATA[Pass customer "age" info to tracking if available.]]></comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </use_customer_age_info> 
                        <use_customer_gender_info translate="label,comment">
                            <label>Customer Gender</label>
                            <comment><![CDATA[Pass customer "gender" info to tracking if available.]]></comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </use_customer_gender_info>                      
                        <product_page_tracking_level>
                            <label>Product Page Tracking Level</label>
                            <comment><![CDATA[To keep optimal tracking point structure in Adform please use: (A) Category level for shops with more than 5000 products, (B) Product level for shops with less than 5000 products. This setting does not affect data collection for DCO (Personalized targeting).]]></comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adform_track/config_product_page_tracking_level</source_model>
                            <sort_order>50</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>                            
                        </product_page_tracking_level>
                        <oldsolution_enabled translate="label">
                            <label>Enable OLD Adform solution</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>60</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </oldsolution_enabled>
                    </fields>
                </settings>
                <feed translate="label">
                    <label>Adform XML Feed Settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>20</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <image_width>
                            <label>Image width</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment><![CDATA[Width (in pixels) of a product image shown in the XML feed.]]></comment>
                        </image_width>
                        <image_height translate="label">
                            <label>Image height</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment><![CDATA[Height (in pixels) of a product image shown in the XML feed.]]></comment>
                        </image_height>
                        <ppf translate="label">
                            <label>Products per feed</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment><![CDATA[Max number of products per feed (sorted by latest added among selected ones).]]></comment>
                        </ppf>    
                        <file_refresh_interval translate="label">
                            <label>Feed file refresh interval</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment><![CDATA[Static XML Feed file refresh interval in minutes. Defaults to 60 minutes.]]></comment>
                        </file_refresh_interval>
                    </fields>
                </feed>                
            </groups>
        </adform_track>
    </sections>
</config>