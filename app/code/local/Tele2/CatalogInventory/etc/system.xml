<?xml version="1.0"?>
<!--
/**
 * Magento Enterprise Edition
 *
 * @category    Tele2
 * @package     Tele2_CatalogInventory
 */
-->
<config>
    <sections>
        <cataloginventory translate="label" module="cataloginventory">
            <groups>
                <options translate="label">
                    <fields>
                        <outofstock_alert_send translate="label">
                            <label>Send Out of Stock Alert to shop admin</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>5</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </outofstock_alert_send>
                        <outofstock_alert_address translate="label">
                            <label>Send alerts to this address</label>
                            <comment>Comma separated list of email addresses</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>6</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </outofstock_alert_address>
                        <virtual_stock translate="label">
                            <label>Virtual Stock</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>5</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </virtual_stock>
                    </fields>
                </options>
            </groups>
        </cataloginventory>
    </sections>
</config>
