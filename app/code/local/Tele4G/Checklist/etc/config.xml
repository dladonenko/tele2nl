<?xml version="1.0"?>
<config>
  <modules>
    <Tele4G_Checklist>
      <version>0.1.0</version>
    </Tele4G_Checklist>
  </modules>
  <global>
    <helpers>
      <checklist>
        <class>Tele4G_Checklist_Helper</class>
      </checklist>
    </helpers>
	<blocks>
	  <checklist>
		<class>Tele4G_Checklist_Block</class>
	  </checklist>
	</blocks>
  </global>
  <admin>
	<routers>
	  <checklist>
	    <use>admin</use>
		<args>
		  <module>Tele4G_Checklist</module>
		  <frontName>checklist</frontName>
		</args>
	  </checklist>
	</routers>
  </admin>
  <adminhtml>
	<menu>
	  <checklist module="checklist">
		<title>Checklist</title>
		<sort_order>100</sort_order>
		<children>
		  <checklistbackend module="checklist">
			<title>Checklist</title>
			<sort_order>0</sort_order>
			<action>checklist/adminhtml_checklistbackend</action>
		  </checklistbackend>
		</children>
	  </checklist>
	</menu>
	<acl>
	  <resources>
		<all>
		  <title>Allow Everything</title>
		</all>
		<admin>
		  <children>
			<checklist translate="title" module="checklist">
			  <title>Checklist</title>
			  <sort_order>1000</sort_order>
			  <children>
		  <checklistbackend translate="title">
			<title>Checklist</title>
		  </checklistbackend>
			  </children>
			</checklist>
		  </children>
		</admin>
	  </resources>
	</acl>
	<layout>
	  <updates>
		<checklist>
		  <file>tele2/checklist.xml</file>
		</checklist>
	  </updates>
	</layout>
  </adminhtml>
</config> 