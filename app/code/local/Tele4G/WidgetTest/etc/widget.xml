<?xml version="1.0"?>
<widgets>
    <widgettest_list type="widgettest/list" translate="name description" module="widgettest">
        <name>Social Bookmarking Links</name>
        <description>Adds a simple list of social bookmarking links</description>
        <parameters>
            <enabled_services>
                <label>Enabled Services</label>
                <visible>1</visible>
                <required>1</required>
                <type>multiselect</type>
                <source_model>widgettest/services</source_model>
            </enabled_services>
            <template translate="label">
                <label>Frontend Template</label>
                <visible>1</visible>
                <required>1</required>
                <type>select</type>
                <values>
                    <text translate="label">
                        <value>widgettest/text.phtml</value>
                        <label>Text Links</label>
                    </text>
                    <icons translate="label">
                        <value>widgettest/icons.phtml</value>
                        <label>Icon Links</label>
                    </icons>
                </values>
            </template>
        </parameters>
    </widgettest_list>
</widgets>