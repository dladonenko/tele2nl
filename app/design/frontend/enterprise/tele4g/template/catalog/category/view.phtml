/**
 * Category view template
 *
 * @see Mage_Catalog_Block_Category_View
 */
?>
<?php
    $_helper    = $this->helper('catalog/output');
    $_category  = $this->getCurrentCategory();
    $_imgHtml   = '';
    if ($_imgUrl = $_category->getImageUrl()) {
        $_imgHtml = '<img src="'.$_imgUrl.'" alt="'.$this->htmlEscape($_category->getName()).'" title="'.$this->htmlEscape($_category->getName()).'" />';
        $_imgHtml = $_helper->categoryAttribute($_category, $_imgHtml, 'image');
    }
?>
<?php if(!$this->isContentMode()): ?>
    <div class="row-fluid" id="breadcrumbs">
        <div class="span12">
                <ul class="breadcrumb">
                    <li><a href="http://comviq.se/"><?php echo $this->__('Hem') ?></a><span class="divider">›</span></li>
                    <li><a href="<?php echo $this->getUrl('/') ?>"><?php echo $this->__('Mobiltelefoner') ?></a><span class="divider">›</span></li>
                    <li class="active"><?php echo $_helper->categoryAttribute($_category, $this->getCurrentCategory()->getName(), 'name') ?></li>
                </ul>
        </div>   
    </div> 
        
        
    <div class="container web-shop">
        <?php echo $this->getMessagesBlock()->toHtml() ?>
        <div class="row">
            <div class="span6">
                <h1><?php echo $_helper->categoryAttribute($_category, $this->getCurrentCategory()->getName(), 'name') ?></h1>
                <?php if($_description=$this->getCurrentCategory()->getDescription()): ?>
                    <?php echo $_helper->categoryAttribute($_category, $_description, 'description') ?>
                <?php endif; ?>
            </div>
            <div class="span6">
                <?php if($_imgUrl): ?>
                    <?php echo $_imgHtml ?>
                <?php endif; ?>
            </div>
        </div>
        <hr />




        <?php if($this->isContentMode()): ?>
            <?php echo $this->getCmsBlockHtml() ?>

        <?php elseif($this->isMixedMode()): ?>
            <?php echo $this->getCmsBlockHtml() ?>
            <?php echo $this->getProductListHtml() ?>

        <?php else: ?>
            <?php echo $this->getProductListHtml() ?>
        <?php endif; ?>
    </div>
<?php else: ?>
    <h1><?php echo $_helper->categoryAttribute($_category, $this->getCurrentCategory()->getName(), 'name') ?></h1>
    <?php echo $this->getCmsBlockHtml() ?>
<?php endif; ?> 